{{!
    @template gradereport_grader/analytics_cell

    Analytics data cell template for grader report.

    Context variables required for this template:
    * userid - User ID
    * analytics - Analytics data object
    * field - Field name to display

    Example context (json):
    {
        "userid": 123,
        "analytics": {
            "assignments": {...},
            "interactive_content": {...}
        },
        "field": "h5p_interactions"
    }
}}

<div class="analytics-cell" data-userid="{{userid}}" data-field="{{field}}">
    {{#field}}
        {{#h5p_interactions}}
            {{#analytics.interactive_content.h5p}}
                {{interaction_count}}
            {{/analytics.interactive_content.h5p}}
        {{/h5p_interactions}}
        
        {{#video_completion}}
            {{#analytics.interactive_content.video}}
                {{completion_rate}}%
            {{/analytics.interactive_content.video}}
        {{/video_completion}}
        
        {{#scorm_score}}
            {{#analytics.interactive_content.scorm}}
                {{avg_score}}
            {{/analytics.interactive_content.scorm}}
        {{/scorm_score}}
        
        {{#sessions_attended}}
            {{#analytics.live_sessions}}
                {{sessions_attended}}
            {{/analytics.live_sessions}}
        {{/sessions_attended}}
        
        {{#punctuality}}
            {{#analytics.live_sessions}}
                {{punctuality_rate}}%
            {{/analytics.live_sessions}}
        {{/punctuality}}
        
        {{#attendance_rate}}
            {{#analytics.attendance}}
                {{attendance_rate}}%
            {{/analytics.attendance}}
        {{/attendance_rate}}
        
        {{#badges_count}}
            {{#analytics.badges}}
                {{.}}
            {{/analytics.badges}}
        {{/badges_count}}
        
        {{#competency_evidence}}
            {{#analytics.competencies}}
                {{evidence_count}}
            {{/analytics.competencies}}
        {{/competency_evidence}}
        
        {{#deadline_adherence}}
            {{analytics.behavioral.deadline_adherence}}%
        {{/deadline_adherence}}
        
        {{#ta_rating}}
            {{#analytics.ta_evaluation}}
                {{avg_ta_rating}}
            {{/analytics.ta_evaluation}}
        {{/ta_rating}}
    {{/field}}
</div>

<style>
.analytics-cell {
    padding: 4px 8px;
    font-size: 0.9rem;
    text-align: center;
    border-radius: 4px;
    background-color: #f8f9fa;
    border: 1px solid #dee2e6;
    min-width: 60px;
}

.analytics-cell:hover {
    background-color: #e9ecef;
    cursor: help;
}

.analytics-cell[data-field="h5p_interactions"] {
    background-color: #d1ecf1;
    border-color: #bee5eb;
}

.analytics-cell[data-field="video_completion"] {
    background-color: #d4edda;
    border-color: #c3e6cb;
}

.analytics-cell[data-field="scorm_score"] {
    background-color: #fff3cd;
    border-color: #ffeaa7;
}

.analytics-cell[data-field="sessions_attended"] {
    background-color: #f8d7da;
    border-color: #f5c6cb;
}

.analytics-cell[data-field="attendance_rate"] {
    background-color: #d1ecf1;
    border-color: #bee5eb;
}

.analytics-cell[data-field="badges_count"] {
    background-color: #fff3cd;
    border-color: #ffeaa7;
}

.analytics-cell[data-field="competency_evidence"] {
    background-color: #d4edda;
    border-color: #c3e6cb;
}

.analytics-cell[data-field="deadline_adherence"] {
    background-color: #f8d7da;
    border-color: #f5c6cb;
}

.analytics-cell[data-field="ta_rating"] {
    background-color: #e2e3e5;
    border-color: #d6d8db;
}
</style>
